@model MaestroDetalleDemo.Models.TB_DEMANDADO

@{ Layout = "~/Views/Shared/_LayoutPageModal.cshtml";}

@using (Ajax.BeginForm("registrarCabezera","Demandado",new AjaxOptions
{   HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "span",
    
}))
{
    <br />
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Registrar Demandado</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.COD_DADO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.COD_DADO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.COD_DADO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DOM_DADO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DOM_DADO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DOM_DADO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.COD_REPRE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("COD_REPRE", ViewBag.Combo as SelectList, "Selecciona");
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="registro1" type="submit" value="Create" class="btn btn-default" />

            </div>
        </div>

        <span id="span"></span>
    </div>
    
}
  



